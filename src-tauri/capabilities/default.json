{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:allow-app-read",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/backgrounds/*" },
        { "path": "$HOME/backgrounds" }
      ]
    }
  ]
}
